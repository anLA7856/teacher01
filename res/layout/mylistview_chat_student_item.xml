<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEEEC"
    android:padding="3dp" 
    android:descendantFocusability= "blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearMylistAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ECEEEC"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/itemStudentPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/default_user_avatar_student" />

        <LinearLayout
            android:id="@+id/linearMylistString"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#815F3D"
                android:textSize="15sp" />
                
                
                            <TextView
                android:id="@+id/itemTeacherNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#815F3D"
                android:textSize="15sp" />
                
            </LinearLayout>
            
            

            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="学生名字:"
                android:textColor="#815F3D"
                android:textSize="15sp" />
                
                
                            <TextView
                android:id="@+id/itemStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="studentName"
                android:textColor="#815F3D"
                android:textSize="15sp" />
            </LinearLayout>
            
            

                        <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#815F3D"
            android:textSize="15sp" />
                
                
        <TextView
            android:id="@+id/itemTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#815F3D"
            android:textSize="15sp" />
            </LinearLayout>
            
            
            
            
            

        </LinearLayout>
        
        
        
        

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
         android:background="#FFFFFF"
         >
    </LinearLayout>

</LinearLayout>